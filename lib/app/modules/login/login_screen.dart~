import 'package:flutter/material.dart';
import 'package:get/get.dart';
import 'package:google_fonts/google_fonts.dart';
import 'package:mobiking/app/controllers/login_controller.dart';
import 'package:mobiking/app/modules/opt/Otp_screen.dart';
// import 'package:mobiking/app/services/login_service.dart'; // No longer directly used in UI build
import 'package:mobiking/app/themes/app_theme.dart';

class PhoneAuthScreen extends StatelessWidget {
  PhoneAuthScreen({Key? key}) : super(key: key);

  final LoginController loginController = Get.find();

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: AppColors.neutralBackground,
      body: SingleChildScrollView(
        child: Column(
          children: [
            // --- Top Image Grid (Now with Asset Image) ---
            ClipRRect(
              borderRadius: const BorderRadius.only(
                bottomLeft: Radius.circular(24),
                bottomRight: Radius.circular(24),
              ),
              child: Container(
                height: 360,
                width: double.infinity,
                decoration: BoxDecoration(
                  color: AppColors.textDark, // Fallback color
                  image: DecorationImage(
                    // --- IMPORTANT: Replace 'assets/images/login_banner.jpg' with your actual asset path ---
                    // Make sure you have the image in your assets folder
                    // and updated your pubspec.yaml file to include the assets.
                    image: AssetImage('assets/images/img.png'),
                    fit: BoxFit.fill, // Use BoxFit.cover to fill the container nicely
                  ),
                ),
              ),
            ),
            const SizedBox(height: 30),

            // --- App Name ---
            Text(
              "Mobiking Wholesale",
              style: GoogleFonts.poppins(
                fontSize: 22,
                fontWeight: FontWeight.w600,
                color: AppColors.textDark,
              ),
            ),
            const SizedBox(height: 24),

            // --- Phone Input Field ---
            Padding(
              padding: const EdgeInsets.symmetric(horizontal: 32),
              child: TextFormField(
                controller: loginController.phoneController,
                keyboardType: TextInputType.phone,
                style: GoogleFonts.poppins(color: Colors.black),
                decoration: InputDecoration(
                  filled: true,
                  fillColor: Colors.white,
                  hintText: 'Enter your mobile number',
                  hintStyle: GoogleFonts.poppins(color: Colors.grey),
                  prefixIcon: const Icon(Icons.phone_android),
                  border: OutlineInputBorder(
                    borderRadius: BorderRadius.circular(16),
                    borderSide: BorderSide.none, // No border visible
                  ),
                  focusedBorder: OutlineInputBorder( // Custom border when focused
                    borderRadius: BorderRadius.circular(16),
                    borderSide: BorderSide(color: Theme.of(context).primaryColor, width: 2),
                  ),
                  enabledBorder: OutlineInputBorder( // Custom border when not focused but enabled
                    borderRadius: BorderRadius.circular(16),
                    borderSide: BorderSide(color: Colors.grey.shade300, width: 1),
                  ),
                ),
              ),
            ),
            const SizedBox(height: 24),

            // --- Login Button ---
            Container(
              margin: const EdgeInsets.symmetric(horizontal: 32),
              // No extra padding/decoration needed on this container if button fills it
              child: Obx(
                    () => SizedBox( // Use SizedBox to give the ElevatedButton a defined width
                  width: double.infinity, // Makes the button take full available width
                  child: ElevatedButton(
                    style: ElevatedButton.styleFrom(
                      backgroundColor: Colors.deepPurpleAccent, // Using a distinct accent color
                      shape: RoundedRectangleBorder(
                        borderRadius: BorderRadius.circular(14), // Slightly more rounded
                      ),
                      padding: const EdgeInsets.symmetric(
                        vertical: 16, // Consistent vertical padding
                      ),
                      elevation: 4, // Add a subtle shadow
                    ),
                    onPressed: loginController.isLoading.value
                        ? null // Disable the button while loading
                        : () async { // Made onPressed async to await loginController.login()
                      await loginController.login(); // Await the login operation
                      // Only navigate to OTP screen if login was successful.
                      // You might want to add a check here based on loginController's status or response.
                      Get.to(() => OtpVerificationScreen(phoneNumber: loginController.phoneController.text));
                    },
                    child: loginController.isLoading.value
                        ? const SizedBox( // Constrain size for loading indicator
                      width: 24,
                      height: 24,
                      child: CircularProgressIndicator(
                        valueColor: AlwaysStoppedAnimation<Color>(Colors.white),
                        strokeWidth: 3, // Thicker stroke for visibility
                      ),
                    )
                        : Text(
                      'Login with Mobile',
                      style: GoogleFonts.poppins(
                        fontSize: 16,
                        fontWeight: FontWeight.w600, // Slightly bolder for button text
                        color: Colors.white,
                      ),
                    ),
                  ),
                ),
              ),
            ),
            const SizedBox(height: 30), // Add some bottom space
          ],
        ),
      ),
    );
  }
}